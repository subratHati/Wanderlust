<%if(success && success.length) { %>
<div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    
     <%=success%>
</div>
<%  } %>

<!-- We write the if condition above because we want to show the alert when there is a message inside "success"
And we set the if condition like this because success -->

<%if(error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        
         <%=error%>
    </div>
    <%  } %>